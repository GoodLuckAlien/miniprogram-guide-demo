
.modal-container{
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}
.modal-mast{
    width: 100%;
    height: 100%;
    background-color: black;
    opacity: 0.7;
}
.modal-text{
    position: absolute;
    left: 50%;
    top:40%;
    transform: translate(-50%,-50%);
    width: 400rpx;
    height: 300rpx;
    background-color: #fff;
    border-radius: 10rpx;
    text-align: center;
    line-height: 300rpx;
}